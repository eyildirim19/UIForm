<Window x:Class="_4_WpfForm_1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_WpfForm_1"
        mc:Ignorable="d"
        Title="Hesap Kitap" Height="200" Width="200"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <TextBox TextChanged="txtNum_TextChanged" x:Name="txtNum" Height="40" FontSize="30"></TextBox>
        <StackPanel x:Name="pnlButtons" Orientation="Horizontal">
            <Button Width="50" x:Name="btnTopla" Content="+" Click="btnTopla_Click"></Button>
            <Button Width="50" x:Name="btnCarp" Content="*" Click="btnTopla_Click"></Button>
            <Button Width="50" x:Name="btnBol" Content="/" Click="btnTopla_Click"></Button>
            <Button Width="50" x:Name="btnCikar" Content="-" Click="btnTopla_Click"></Button>
        </StackPanel>
        <Button Content="=" Height="30" x:Name="btnResult" Click="btnResult_Click" />
        <TextBlock Text="0" FontSize="70" HorizontalAlignment="Center" x:Name="Result" />
    </StackPanel>
</Window>
