<Window x:Class="_4_WpfForm_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_WpfForm_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!--büyün buttonlara stil uygulanır-->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Red"></Setter>
            <Setter Property="Background" Value="Yellow"></Setter>
            <Setter Property="FontSize" Value="50"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="100"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <!--<Button Foreground="Red" Background="Yellow" FontSize="50">Button 1</Button>
        <Button Foreground="Red" Background="Yellow" FontSize="50">Button 1</Button>-->
        <Button>Button 1</Button>
        <Button>Button 2</Button>
        <TextBlock TextWrapping="Wrap">Merhaba Ben text blok.....</TextBlock>
    </StackPanel>
</Window>